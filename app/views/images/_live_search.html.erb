<% images = assets unless local_assigns[:assets].nil? %>
<h4>Images</h4>
<div class="clearfix">
	<% images.each_with_index do |image, index|  %>
		<div class="_thumbsmall"> 
			<%= render :partial => "images/thumbnail", :locals => {:image => image}  %>
		</div>
		<% if index == 20 %>
			<% break %>
		<% end %>
	<% end %>
</div>