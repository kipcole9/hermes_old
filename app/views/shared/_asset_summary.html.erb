<h3>Content Summary</h3>
<%= form.text_field :title, :disabled => is_show?, :size => 45 %>
<%= form.text_area :description, :disabled => is_show?, :size => "45x5" %>
<%= form.text_field :tag_list, :disabled => is_show?, :size => 45 %>

<% if is_show? %>
	<%= form.text_field "Content Rating", :content_rating_description,  :disabled => is_show?, :size => 8 %>
<% else %>	
	<%= form.select :content_rating, ContentRating.select_array %>
<% end %>
<%= form.check_box :include_in_index, :disabled => is_show? %>

<h3>Location</h3>
<%= form.text_field :location, :disabled => is_show?, :size => 30 %>
<%= form.text_field :city, :disabled => is_show?, :size => 30 %>
<%= form.text_field "State/Province", :state, :disabled => is_show?, :size => 30 %>

<% if is_show? %>
	<%= form.text_field :country, :disabled => is_show?, :size => 30 %>
<% else %>
	<%= form.select :country, Country.select_array, :include_blank => true  %>
<% end %>

<%= form.text_field :latitude, :disabled => is_show?, :size => 10 %>	
<%= form.text_field :longitude, :disabled => is_show?, :size => 10 %>

<h3>Publishing Data</h3>
<% if is_show? %>
	<%= form.text_field "Status", :status_description, :disabled => is_show?, :size => 10 %>
<% else %>
	<%= form.select :status, Asset::STATUS %>
<% end %>

<% if is_show? %>
	<%= form.text_field :dont_publish_before, :disabled => is_show?, :size => 30 %>
<% else %>
	<%= form.datetime_select :dont_publish_before, :include_blank => true  %>
<% end %>

<% if is_show? %>
	<%= form.text_field :dont_publish_after, :disabled => is_show?, :size => 30 %>
<% else %>
	<%= form.datetime_select :dont_publish_after, :include_blank => true  %>
<% end %>

<% if !is_show? %>
	<%= submit_tag "Save changes" %>
<% end %>